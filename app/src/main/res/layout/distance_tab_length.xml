<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/distance_to_m1_in_nm"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp" />

    <com.aayaffe.sailingracecoursemanager.dialogs.HorizontalNumberPicker
        android:id="@+id/distance_length_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:buttonsTextColor="@color/cmark_blue_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/start_line_length_in_m"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp" />

    <com.aayaffe.sailingracecoursemanager.dialogs.HorizontalNumberPicker
        android:id="@+id/startline_length_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:buttonsTextColor="@color/cmark_blue_light" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/gate_length_in_m"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp" />

    <com.aayaffe.sailingracecoursemanager.dialogs.HorizontalNumberPicker
        android:id="@+id/gate_length_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:buttonsTextColor="@color/cmark_blue_light" />


</LinearLayout>